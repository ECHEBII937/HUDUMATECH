<div class="form-signup m-auto">
    <div class="container text-center">
        <!-- Updated logo -->
        <img class="imgsignup w-75" src="img/hudumatech_logo.png" alt="HUDUMATECH Logo"> <!-- Updated to HUDUMATECH logo -->
    </div>
    <form action="/signup" method="post">
        <h1 class="h3 mb-4 fw-normal">Create an Account with HUDUMATECH</h1> <!-- Updated title -->

        <!-- Name Input -->
        <div class="form-floating">
            <input name="name" type="text" class="form-control" id="floatingName" placeholder="Your Name" required>
            <label for="floatingName">Name</label>
        </div>

        <!-- Address Input -->
        <div class="form-floating">
            <input name="address" type="text" class="form-control" id="floatingAddress" placeholder="Your Address" required>
            <label for="floatingAddress">Address</label>
        </div>

        <!-- Phone Input -->
        <div class="form-floating">
            <input name="phone" type="tel" class="form-control" id="floatingPhone" placeholder="Your Phone Number" required>
            <label for="floatingPhone">Phone</label>
        </div>

        <!-- Email Input -->
        <div class="form-floating mt-3">
            <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
            <label for="floatingInput">Email Address</label>
        </div>

        <!-- Password Input -->
        <div class="form-floating">
            <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Your Password" required>
            <label for="floatingPassword">Password</label>
        </div>

        <!-- Terms and Conditions -->
        <p class="condition">
            By signing up, you agree to our 
            <a href="#">Terms & Conditions</a> and <a href="#">Privacy Policy</a>
        </p>

        <!-- Sign Up Button -->
        <button class="w-100 btn btn-lg btn-primary" id="btn-signup" type="submit" style="background-color: #1F4F6C;">Sign Up</button> <!-- Updated button color -->

        <!-- Sign In Link -->
        <p class="condition mt-2">
            Already have an account? <a href="/signin">Sign In</a> <!-- Updated text for localization -->
        </p>
    </form>
</div>
